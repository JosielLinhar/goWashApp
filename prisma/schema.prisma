generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String
  name     String
  bookings Booking[]
  createAt DateTime  @default(now())
  updateAt DateTime  @updatedAt
}

model Wash {
  id          String        @id @default(uuid())
  name        String
  address     String
  phones      String[]
  description String
  imageUrl    String
  createAt    DateTime      @default(now())
  updateAt    DateTime      @updatedAt
  services    WashService[]
}

model WashService {
  id          String    @id @default(uuid())
  name        String
  description String
  imageUrl    String
  price       Decimal   @db.Decimal(10, 2)
  washId      String
  wash        Wash      @relation(fields: [washId], references: [id])
  bookings    Booking[]
}

model Booking {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  serviceId String
  service   WashService @relation(fields: [serviceId], references: [id])
  date      DateTime
  createAt  DateTime    @default(now())
  updateAt  DateTime    @updatedAt
}
